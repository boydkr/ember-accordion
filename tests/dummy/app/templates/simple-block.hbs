AccordionList<h3>Example Usage</h3>
<AccordionList as |accordion|>
  {{#each items as |item|}}
    <accordion.item as |accordionItem|>
      <accordionItem.toggle>
        <span class='angle-right'>></span>
        {{item.name}}
      </accordionItem.toggle>
      <accordionItem.panel>
        {{item.description}}
      </accordionItem.panel>
    </accordion.item>
  {{/each}}
</AccordionList>


{{#code-block language='markup'}}
&lt;!-- Define a new AccordionList --&gt;
&lt;AccordionList as |accordion|&gt;

  &lt;!-- Iterate over an array of items --&gt;
  \{{#each items as |item|}}

    &lt;!-- For each element in list create an 'accordion.item' --&gt;
    &lt;accordion.item as |accordionItem|&gt;

      &lt;!-- Create a 'toggle' and a 'panel' for the item --&gt;
      &lt;accordionItem.toggle&gt;
        &lt;i class="fas fa-angle-right"&gt;&lt;/i&gt;
        \{{item.name}}
      &lt;/accordionItem.toggle&gt;

      &lt;!-- Clicking on the 'toggle' will display the contents of the 'panel' --&gt;
      &lt;accordionItem.panel&gt;
        \{{item.description}}
      &lt;/accordionItem.panel&gt;
    &lt;/accordion.item&gt;
  \{{/each}}
&lt;AccordionList&gt;
{{/code-block}}


<h3>Open Many Panels at Once</h3>
<AccordionList @allowManyActiveItems={{true}} as |accordion|>
  {{#if accordion.allExpanded}}
    <a href='#' {{action accordion.collapseAll}}>Collapse All</a>
  {{else}}
    <a href='#' {{action accordion.expandAll}}>Expand All</a>
  {{/if}}
  {{#each items as |item|}}
    <accordion.item as |accordionItem|>
      <accordionItem.toggle>
        <span class='angle-right'>></span>
        {{item.name}}
      </accordionItem.toggle>
      <accordionItem.panel>
        {{item.description}}
      </accordionItem.panel>
    </accordion.item>
  {{/each}}
</AccordionList>

{{#code-block language='markup'}}
&lt;!-- Follow example above, set 'allowManyActiveItems=true' --&gt;
&lt;AccordionList @allowManyActiveItems=\{{true}} as |accordion|&gt;
  &lt;!-- ... --&gt;
&lt;/AccordionList&gt;
{{/code-block}}

<h3>Default Open Panel(s)</h3>
<AccordionList @allowManyActiveItems={{true}} as |accordion|>
  {{#each items as |item|}}
    <accordion.item as |accordionItem|>
      <accordionItem.toggle>
        <i class="fa fa-angle-right"></i>
        <span class='angle-right'>></span>
        {{item.name}}
      </accordionItem.toggle>
      <accordionItem.panel @openOnInit={{true}}>
        {{item.description}}
      </accordionItem.panel>
    </accordion.item>
  {{/each}}
</AccordionList>

{{#code-block language='markup'}}
&lt;!-- Set '@openOnInit=\{{true}}' on the desired panel(s) --&gt;

&lt;!-- ... --&gt;
&lt;accordionItem.panel @openOnInit=\{{true}}&gt;
  &lt;!-- ... --&gt;
&lt;/accordionItem.panel&gt;
&lt;!-- ... --&gt;
{{/code-block}}
